{
  "dataset_reader": {
    "class_name": "basic_classification_reader",
    "format": "json",
    "orient": "split",
    "x": "text",
    "y": "category",
    "data_path": "/home/nchizhikova/clinc150/all/dnnc",
    "train": "train.json",
    "valid": "valid.json",
    "test": "test.json",
    "shot": 5
  },
  "dataset_iterator": {
    "class_name": "data_learning_iterator"
  },
  "chainer": {
    "in": "q",
    "pipe": [
      {
        "class_name": "stream_spacy_tokenizer",
        "in": "q",
        "id": "my_tokenizer",
        "lemmas": true,
        "out": "q_token_lemmas"
      },
      {
        "ref": "my_tokenizer",
        "in": "q_token_lemmas",
        "out": "q_lem"
      },
      {
        "in": [
          "q_lem"
        ],
        "out": [
          "q_vect"
        ],
        "fit_on": [
          "q_lem"
        ],
        "id": "tfidf_vec",
        "class_name": "sklearn_component",
        "save_path": "{MODELS_PATH}/vectorizer/tfidf_vectorizer.pkl",
        "load_path": "{MODELS_PATH}/vectorizer/tfidf_vectorizer.pkl",
        "model_class": "sklearn.feature_extraction.text:TfidfVectorizer",
        "infer_method": "transform"
      },
      {
        "class_name": "cos_sim_classifier",
        "in": "q_vect",
        "fit_on": [
          "q_vect",
          "y"
        ],
        "top_n": 1,
        "save_path": "{MODELS_PATH}/tfidf_cos_sim_classifier.pkl",
        "load_path": "{MODELS_PATH}/tfidf_cos_sim_classifier.pkl",
        "out": [
          "answer",
          "score"
        ]
      }
    ],
    "out": [
      "answer",
      "score"
    ]
  },
  "train": {
    "class_name": "fit_trainer",
    "evaluation_targets": [
      "train",
      "valid",
      "test"
    ],
    "metrics": [
      {
        "name": "accuracy",
        "inputs": [
          "y",
          "answer"
        ]
      }
    ]
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models/new_faq/5shot/tfidf_autofaq"
    }
  }
}